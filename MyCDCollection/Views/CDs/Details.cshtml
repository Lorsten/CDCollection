@model MyCDCollection.Models.CD

@{
    ViewData["Title"] = "Details";
}

<section>
    <h2>Detaljer</h2>

    <div>
        <h3>CD</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Album)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Album)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artist)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artist)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lended)
            </dt>
            @if (Model.Lended)
            {
                <dd class="col-sm-10">
                    ja
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                   Nej
                </dd>
            }

        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.CDID">Edit</a> |
        <a asp-action="Index">Tillbaka till start</a>
    </div>
</section>